import java.util.*;
public class Day13 {

    public static void main(String[] args) {
		String st=new Scanner(System.in).next();
		
		int u=0,l=0;
		
		for(char c:st.toCharArray()){
		    if(Character.isAlphabetic(c)){
		        if(Character.isUpperCase(c)) u++;
		        else l++;
		    }
		}
		
		System.out.print(Math.min(u,l));
	}
}
